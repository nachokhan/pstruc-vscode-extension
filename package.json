{
  "name": "pstruc-ext",
  "displayName": "Pstruc Extension",
  "description": "The ultimate tool for generating a structured JSON representation of your project's file and directory hierarchy and content.",
  "version": "1.0.3",
  "publisher": "nachokhan",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onCommand:extension.pstruc_extension"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nachokhan/pstruc-vscode-extension"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.pstruc_extension",
        "title": "Pstruc: Generate JSON Structure"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.pstruc_extension",
          "when": "resourceLangId != ''",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Pstruc Extension",
      "properties": {
        "pstruc_extension.ignorePatterns": {
          "type": "array",
          "default": [],
          "description": "List of patterns to ignore when generating the structure."
        },
        "pstruc_extension.hideBinaryContent": {
          "type": "boolean",
          "default": true,
          "description": "Hide the content of binary files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "isbinaryfile": "^5.0.2"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^14.14.6",
    "@vscode/test-electron": "^2.4.1",
    "typescript": "^4.0.3",
    "vscode": "^1.1.37"
  }
}
