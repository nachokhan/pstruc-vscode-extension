{
  "name": "pstruc-ext",
  "displayName": "Pstruc Extension",
  "description": "The ultimate tool for generating a structured JSON representation of your project's file and directory hierarchy and content.",
  "version": "1.0.1",
  "publisher": "nachokhan",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onCommand:extension.pstruc_extension"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nachokhan/pstruc-vscode-extension"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.pstruc_extension",
        "title": "Pstruc: Generate JSON Structure"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pstruc Extension",
      "properties": {
        "pstruc_extension.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Array of glob patterns to ignore specific files or directories."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "typescript": "^4.0.3",
    "vscode": "^1.1.37",
    "@types/node": "^14.14.6",
    "@types/mocha": "^9.1.1",
    "@types/glob": "^7.2.0",
    "@vscode/test-electron": "^2.4.1"
  }
}
